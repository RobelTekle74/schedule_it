<!DOCTYPE html>
<html>
<head>
        <% include Templates/header.ejs %>
</head>
<body>
    <div class="container">

        <nav class="navbar navbar-expand-lg sticky-top navbar-light">

            <a class="navbar-brand" href="/home">Schedule It</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav">

                    <li class="nav-item">

                        <a class="nav-link" href="/home">Home </a>

                    </li>

                    <li class="nav-item active dropdown">

                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Owner Dashboard <span class="sr-only">(current)</span>
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                            <a class="dropdown-item" href="/generateSchedule">Generate Schedule</a>

                            <div class="dropdown-divider"></div>

                            <a class="dropdown-item" href="/owner">Dashboard</a>

                        </div>
                    </li>

                    <li>

                        <button class="btn btn-outline-success btn-sm p-0"><a class="nav-link" href="/home">Sign Out</a></button>
                        
                    </li>

                </ul>
                
            </div>

        </nav>

        <div class=" mx-auto p-5" id="CEAInput">

            <input type="text" class="form-control text-center" id="role" placeholder="Role">

            <input type="text" class="form-control text-center" id="name" placeholder="Employee Full Name">

            <input type="email" class="form-control text-center" id="emall" placeholder="Employee Email">

            <input type="password" class="form-control text-center" id="passWord" placeholder="Password">

            <input type="text" class="form-control text-center" id="phoneNumber" placeholder="Phone Number">

            <div class="input-group-prepend d-flex justify-content-end" id="button-addon3">

                <button class="btn btn-success" id="submit" href="/createEmployeeAcct">Add</button>

            </div>

        </div>

        <% users.forEach(function(user){ %> 
            <div id="userInfo">
                <h1 class="d-flex justify-content-center"> <%= user.name %> </h1>
                <h2 class="d-flex justify-content-center"> <%= user.id %> </h2>
                <h2 class="d-flex justify-content-center"> <%= user.email %> </h2>
                <h2 class="d-flex justify-content-center"> <%= user.phone %> </h2>
            </div>
        <% }) %>

    </div>
    
    
    <% include Templates/footer.ejs %>
    
</body>
</html>